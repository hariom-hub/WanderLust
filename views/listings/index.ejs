<% layout("../layouts/boilerplate") %>
        <h1>All Listings</h1>
        <div class="row row-cols-lg-4 offset-2 mb-3">
            <% for (let list of allListings){ %>
                <div class="card" style="width: 18rem;">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= list.title %>
                        </h5>
                        <p class="card-text">
                            <%= list.description %>
                        </p>
                        <p class="card-text">
                            <%= list.country %>
                        </p>
                        <p class="card-text">
                            <%= list.location %>
                        </p>
                        <p class="card-text">Price : &#8377;<%= list.price.toLocaleString("en-IN") %>/night</p>
                        <a href="/listings/<%=list._id%>" class="btn btn-primary">View Listing</a>
                    </div>
                </div>
                <% } %>
        </div>

<style>
    .card{

        align-items: center;
        border: none !important;
    }
</style>